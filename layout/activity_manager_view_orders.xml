<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerViewOrdersActivity"
    android:background="@color/Dark2"
    >

    <RelativeLayout
        android:id="@+id/relative_Manager_Orders"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customers Orders:"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="@color/Dark4"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customers_Orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_Manager_Orders"
        android:background="@color/Dark4"
        />

</RelativeLayout>